<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.ness.virtualtour.MainActivity">

        <TextView
            android:id="@+id/txt_lobby"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Lobby" />


        <com.google.vr.sdk.widgets.pano.VrPanoramaView
            android:id="@+id/pnv_lobby"
            style="@style/panoViewStyle"
            android:layout_below="@id/txt_lobby" />

        <TextView
            android:id="@+id/txt_reception"
            style="@style/textStyle"
            android:layout_below="@id/pnv_lobby"
            android:text="Reception" />


        <com.google.vr.sdk.widgets.pano.VrPanoramaView
            android:id="@+id/pnv_reception"
            style="@style/panoViewStyle"
            android:layout_below="@id/txt_reception" />

        <TextView
            android:id="@+id/txt_inside_office"
            style="@style/textStyle"
            android:layout_below="@id/pnv_reception"
            android:text="Inside Office" />


        <com.google.vr.sdk.widgets.pano.VrPanoramaView
            android:id="@+id/pnv_inside_office"
            style="@style/panoViewStyle"
            android:layout_below="@id/txt_inside_office" />


        <TextView
            android:id="@+id/txt_canteen"
            style="@style/textStyle"
            android:layout_below="@id/pnv_inside_office"
            android:text="Canteen" />


        <com.google.vr.sdk.widgets.pano.VrPanoramaView
            android:id="@+id/pnv_canteen"
            style="@style/panoViewStyle"
            android:layout_below="@id/txt_canteen" />

        <TextView
            android:id="@+id/txt_conference"
            style="@style/textStyle"
            android:layout_below="@id/pnv_canteen"
            android:text="Conference" />


        <com.google.vr.sdk.widgets.pano.VrPanoramaView
            android:id="@+id/pnv_conference"
            style="@style/panoViewStyle"
            android:layout_below="@id/txt_conference" />

    </RelativeLayout>

</ScrollView>