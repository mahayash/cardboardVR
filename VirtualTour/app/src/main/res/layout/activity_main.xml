<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.ness.virtualtour.MainActivity">

        <TextView
            android:id="@+id/txt_lobby"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lobby" />


        <!--<com.google.vr.sdk.widgets.pano.VrPanoramaView
            android:id="@+id/pnv_lobby"
            android:layout_width="match_parent"
            android:layout_height="250dip"
            android:layout_below="@id/txt_lobby"
            android:scrollbars="@null" />-->
        <ImageView
            android:id="@+id/pnv_lobby"
            android:layout_width="match_parent"
            android:layout_height="250dip"
            android:layout_below="@id/txt_lobby" />

        <TextView
            android:id="@+id/txt_reception"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pnv_lobby"
            android:layout_marginTop="20dp"
            android:text="Reception" />


        <com.google.vr.sdk.widgets.pano.VrPanoramaView
            android:id="@+id/pnv_reception"
            android:layout_width="match_parent"
            android:layout_height="250dip"
            android:layout_below="@id/txt_reception"
            android:scrollbars="@null"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_inside_office"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pnv_reception"
            android:layout_marginTop="20dp"
            android:text="Inside Office" />


        <com.google.vr.sdk.widgets.pano.VrPanoramaView
            android:id="@+id/pnv_inside_office"
            android:layout_width="match_parent"
            android:layout_height="250dip"
            android:layout_below="@id/txt_inside_office"
            android:scrollbars="@null"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/txt_canteen"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pnv_inside_office"
            android:layout_marginTop="20dp"
            android:text="Canteen" />


        <com.google.vr.sdk.widgets.pano.VrPanoramaView
            android:id="@+id/pnv_canteen"
            android:layout_width="match_parent"
            android:layout_height="250dip"
            android:layout_below="@id/txt_canteen"
            android:scrollbars="@null"
            android:visibility="invisible" />


    </RelativeLayout>

</ScrollView>